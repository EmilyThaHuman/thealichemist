{
  "compilerOptions": {
    "checkJs": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./src/assets/*"],
      "@services/*": ["./src/services/*"],
      "@store/*": ["./src/store/*"],
      "@api/*": ["./src/api/*"],
      "@constants/*": ["./src/constants/*"],
      "@styles/*": ["./src/styles/*"],
      "@lib/*": ["./src/lib/*"],
      "@config/*": ["./src/config/*"],
      "@lib/utils/*": ["./src/lib/utils/*"]
    },
    "jsxImportSource": "react",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "types": ["vite/client"]
  },
  "include": [
    "src/App.jsx",
    "src/main.jsx",
    "src/components/Chat/messages/*.{js,jsx}",
    "src/components/Chat/sheets/*.{js,jsx}",
    "src/components/Navigation/*.{js,jsx}",
    "src/components/Chat/config/*.{js,jsx}",
    "src/components/Layout/*.{js,jsx}",
    "src/components/Editor/*.{js,jsx}",
    "src/components/ui/*.{js,jsx}",
    "src/pages/**/*.{js,jsx}",
    "src/contexts/*.{js,jsx}",
    "src/hooks/*.{js,jsx}",
    "src/utils/*.{js,jsx}",
    "src/store/*.{js,jsx}",
    "src/lib/**/*.{js,jsx}",
    "src/config/*.{js,jsx}",
    "src/api/*.{js,jsx}",
    "src/constants/*.{js,jsx}",
    "src/styles/*.{css,scss}",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/node_modules/*",
    "**/.git/*"
  ]
}
